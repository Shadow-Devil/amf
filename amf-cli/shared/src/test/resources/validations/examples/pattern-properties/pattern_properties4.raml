#%RAML 1.0
title: My API With Types
types:
  Person:
    additionalProperties: false
    properties:
      a: integer
      //: # force all additional properties to be a string
        type: string

/test:
  get:
    responses:
      200:
        body:
          application/json:
            type: Person
            example:
              a: 34
              note2: "ES" # not valid as it is not a string
              note1: "US" # valid as it does not match the pattern