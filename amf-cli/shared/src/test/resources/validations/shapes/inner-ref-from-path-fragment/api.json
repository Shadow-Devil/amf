{
  "swagger": "2.0",
  "info": {
    "title": "Swagger Sample API"
  },
  "host": "my.api.com",
  "basePath": "/v1",
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json",
    "application/xml"
  ],
  "paths": {
    "/pets/{petId}": {
      "$ref": "resourceWithLinkedDefinitions.json"
    }
  },
  "definitions": {
    "Pet": {
      "required": [
        "name"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        }
      }
    },
    "ErrorModel": {
      "required": [ "code", "message" ],
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}