#%RAML 1.0 DataType
    type: object
    properties:
      serialNumber:
        required: false
        description: Unique device identifier (usually IMEI, but could be MEID for CDMA networks)
        type: string
        pattern: "[0-9a-f]+"
      paymentPlan:
        required: false
        description: Only present for financed devices
        type: PaymentProgram
      connection:
        required: false
        description: Additional information about the connection (transactionType and phoneNumber) is required by some service providers
        type: Connection
