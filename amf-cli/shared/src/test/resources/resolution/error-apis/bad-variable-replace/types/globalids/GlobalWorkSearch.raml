#%RAML 1.0 DataType

type: object
description: A GlobalWork maps all of the products from the different HarperCollins entities, that are related to a single work, to a globally unique identifier.
properties:
  id:
    description: The Globally unique ID for this work.
    required: false
    type: string  
  name:
    description: name of this work.
    required: false
    type: string  
  owningEntity:
    description: Owning Entity of this work.
    required: false
    type: string 
  globalContributorId:
    description: Global Contributor that this work has been mapped to.
    required: false
    type: string  
  isbn:
    description: ISBN
    required: false
    type: string
  bisac:
    description: BISAC
    required: false
    type: string
  pubYear:
    description: Publication Year
    required: false
    type: number
  imprint:
    description: Imprint
    required: false
    type: string  
  entitySpecificAuthorID:
    description: The Entity Specific Author ID
    required: false
    type: string  